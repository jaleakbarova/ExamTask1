@using BizLand.Models;

@{
    ViewData["Title"] = "Create";
}

@model Cart
<div class="col-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Carts elements</h4>
            <form class="forms-sample" asp-action="Create">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" id="exampleInputName1" placeholder="Title">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" id="exampleInputName1" placeholder="Description">
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Icon">Icon</label>
                    <input asp-for="Icon" class="form-control" id="exampleInputName1" placeholder="Icon">
                    <span asp-validation-for="Icon"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light" asp-action="index">Cancel</button>
                <div asp-validation-summary="ModelOnly"></div>
            </form>
        </div>
    </div>
</div>